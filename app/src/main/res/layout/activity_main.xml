<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lg403756.td5_projet.MainActivity">

    <Button
        android:text="@string/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_height="50dp"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_width="200dp" />

    <TextView
        android:text="@string/forme"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:id="@+id/numberSeek" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="Choisissez un niveau de difficultÃ©"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/numberSeek"
        android:layout_alignStart="@+id/button" />


    <SeekBar
        android:layout_height="35dp"
        android:layout_marginTop="11dp"
        android:id="@+id/seekBar2"
        android:layout_width="450dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberSeeker2"
        android:layout_below="@+id/seekBar2"
        android:layout_alignStart="@+id/numberSeek" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/radioButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <RadioButton
            android:text="Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="41dp"
            android:id="@+id/radioButton"
            android:layout_alignEnd="@+id/spinner"
            android:checked="true" />
        <RadioButton
            android:text="Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/radioButton2"
            android:layout_alignEnd="@+id/spinner" />

        <RadioButton
            android:text="Yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton5"
            android:layout_alignBaseline="@+id/radioButton3"
            android:layout_alignBottom="@+id/radioButton3"
            android:layout_alignEnd="@+id/textView" />

        <RadioButton
            android:text="Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton6"
            android:layout_above="@+id/seekBar3"
            android:layout_alignStart="@+id/radioButton3" />

        <RadioButton
            android:text="Blue"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_alignBottom="@+id/radioGroup"
            android:layout_toStartOf="@+id/numberSeek"
            android:layout_marginBottom="33dp" />

    </RadioGroup>

    <TextView
        android:text="Vitesse des objets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="450dp"
        android:layout_height="35dp"
        android:id="@+id/seekBar"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
